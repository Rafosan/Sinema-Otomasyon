<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SinemaOtomasyon.Pages.FilmAddPage"
             Title="FilmAddPage">
    <StackLayout Padding="20">
        <Entry Placeholder="Film Adı" x:Name="FilmAdiEntry" Margin="0,20,0,20" />
        <DatePicker x:Name="MyDatePicker" DateSelected="MyDatePicker_DateSelected" Margin="0,20,0,20"/>
        <Entry Placeholder="Yönetmen Adı" x:Name="YonetmenAdiEntry" Margin="0,20,0,20"/>
        <Button x:Name="btnFilmAdd" Text="Kaydet"  Clicked="btnFilmAdd_Clicked"/>
    </StackLayout>
</ContentPage>